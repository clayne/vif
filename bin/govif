#! /bin/bash

# Source local vif configuration if running from root ("sudo" only)
if [ -z "${VIF_COMPILER}" ]; then
    if [ "$(id -u)" -eq "0" ]; then
        if [ ! -z "${SUDO_USER}" ]; then
            eval source "~${SUDO_USER}/.phypprc"
        fi
    fi
fi

if [ -z "${VIF_COMPILER}" ]; then
    echo "error: the vif library is not installed for this user"
    exit
fi

if [ -f $1 ]; then
    if [ $1 -ot $1.cpp ]; then
        echo "vif: re-compiling '$1'..."
        RECOMPILE=1
    else
        RECOMPILE=0
        for f in ${VIF_PATH}/include/*; do
            if [ -f $f ] && [ "$f" -nt $1 ]; then
                echo "$f is more recent than program, re-compiling '$1'..."
                RECOMPILE=1
                break
            fi
        done
        if [ ${RECOMPILE} -eq 0 ]; then
            for f in ${VIF_PATH}/lib/*; do
                if [ -f $f ] && [ "$f" -nt $1 ]; then
                    echo "$f is more recent than program, re-compiling '$1'..."
                    RECOMPILE=1
                    break
                fi
            done
        fi
    fi
else
    echo "vif: compiling '$1'..."
    RECOMPILE=1
fi

if [ ${RECOMPILE} -eq 1 ]; then
    cvif time optimize debug $1.cpp
    if [ $? -ne 0 ]; then
        exit
    fi
fi

# Start the debugger and run the program
a=./$1
echo "vif: starting debugger..."
shift
(echo "run " $@; cat) | gdb ./$a
